body
	position relative
	height 100vh
	min-width 320px
	transition 0.5s all
	
html
	font-family Circe
	font-weight normal
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	color black
	margin-left auto
	margin-right auto


section
	font-size 1.6rem


.box
	position relative
	padding 0 15px
	max-width 1140px
	margin-left auto
	margin-right auto
	&-mini
		width 844px

.wrapper
	display flex
	flex-direction column
	min-height 100vh

.main
	flex 1

.hidden
	display none

.background-blur
	position fixed
	width 100%
	height 100vh
	z-index 10
	background-color rgba(0,0,0,0.5)
	display none

.headering
	color #000000
	font-size 50px
	text-align center
	font-weight 700
	span
		font-size 50px
		color #b99359
		+to-width(840px)
			font-size 44px
		+to-width(600px)
			font-size 30px
	+to-width(840px)
		font-size 44px
	+to-width(600px)
		font-size 30px

.footer
	&__main
		+to-width(900px)
			display flex
			flex-direction column-reverse

.pagination-basic
	width 100%
	height 100%
	top 0
	left 0
	position absolute
	display flex
	align-items center
	.box
		display flex
		justify-content space-between
		padding-left 0
		z-index 4
		width 100%
		padding 0
	&__left
		cursor pointer
		opacity 1
		transition 0.4s opacity
		&:hover
			opacity 0.5
		img
			+to-width(600px)
				width 9px
		&.swiper-button-disabled
			opacity 0.2
			cursor default
	&__right
		cursor pointer
		opacity 1
		transition 0.4s opacity
		&:hover
			opacity 0.5
		img
			+to-width(600px)
				width 9px
		&.swiper-button-disabled
			opacity 0.2
			cursor default

.dots-basic
	z-index 5
	position absolute
	justify-content center
	width 100%
	left 0
	bottom -30px!important
	display none
	+to-width(840px)
		display flex
	.swiper-pagination-bullet
		width 16px
		height 16px
		border 1px solid #d8d8d8
		background-color #ffffff
		margin-right 7px
		&:last-child
			margin-right 0
		&-active
			background-color #b99359