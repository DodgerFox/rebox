.action-belt
	width 100%
	height 158px
	margin-bottom 50px
	background-color $main
	+to-width(980px)
		height auto
		padding-bottom 30px
	.box
		display flex
		justify-content space-between
		align-items center
		+to-width(980px)
			height auto
			flex-direction column
	&__left
		&-image
			+to-width(600px)
				width 315px
	&__middle
		color white
		&-title
			font-size 50px
			font-weight 700
			+to-width(1080px)
				font-size 40px
		&-text
			font-size 30px
			font-weight 400
			+to-width(1080px)
				font-size 22px
			+to-width(980px)
				padding-bottom 24px
			+to-width(600px)
				font-size 20px
	&__right
		&-btn
			font-size 20px
			font-weight 400
			width 243px
			height 60px
			display flex
			justify-content center
			align-items center
			background-color white
			border 3px solid transparent
			cursor pointer
			t()
			&:hover
				color white
				border 2px solid white
				background-color transparent