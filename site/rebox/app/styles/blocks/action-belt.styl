.action-belt
	width 100%
	height 158px
	margin-bottom 50px
	background-color $main

	.box
		display flex
		justify-content space-between
		align-items center

	&__middle
		color white
		&__title
			font-size 50px
			font-weight 700
		&__text
			font-size 30px
			font-weight 400

	&__btn
		font-size 20px
		font-weight 400
		padding 19px 27px
		background-color white
		border 3px solid transparent
		cursor pointer
		t()
		&:hover
			color white
			border 3px solid white
			background-color transparent