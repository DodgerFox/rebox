.welcome-slider
	width 100%
	height 86vh
	background-size cover
	margin-bottom 50px
	.swiper-wrapper
		z-index 3
	&__content
		width 100%
	&__slide
		width 100%
		height 100vh
		background-size cover
		background-position 50% 50%
		justify-content flex-start
		.box
			text-align left
			padding-left 100px
			width 100%
			+to-width(600px)
				padding-left 26px
		&-title
			font-size 70px
			font-weight 700
			padding-bottom 13px
			+to-width(840px)
				font-size 60px
			+to-width(600px)
				font-size 50px
				padding-bottom 8px
		&-text
			font-size 30px
			font-weight 400
			padding-bottom 35px
			+to-width(600px)
				font-size 20px
		&-btn
			color white
			background-color $main
			width 315px
			height 70px
			display flex
			justify-content center
			align-items center
			font-size 22px
			font-weight 700
			border 2px solid transparent
			cursor pointer
			t()
			&:hover
				color $main
				border 2px solid $main
				background-color transparent
			+to-width(400px)
				width 100%
				font-size 20px
				font-weight 400

	.pagination
		width 100%
		height 85vh
		top 0
		left 0
		position absolute
		display flex
		align-items center
		.box
			display flex
			justify-content space-between
			padding 0
			z-index 4
			width 100%
		&__left
			margin-left -40px
			cursor pointer
			+to-width(1260px)
				margin-left 15px
			+to-width(600px)
				margin-left 8px
				&-arrow
					width 9px
			&.swiper-button-disabled
				opacity 0.2
				cursor default
		&__right
			margin-right -40px
			cursor pointer
			+to-width(1260px)
				margin-right 15px
			+to-width(600px)
				margin-right 8px
				&-arrow
					width 9px
			&.swiper-button-disabled
				opacity 0.2
				cursor default
	&__dots
		z-index 5
		position absolute
		display flex
		justify-content center
		.swiper-pagination-bullet
			width 16px
			height 16px
			border 1px solid #d8d8d8
			background-color #ffffff
			&-active
				background-color #b99359