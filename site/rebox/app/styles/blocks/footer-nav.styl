.footer-nav
	padding 32px 0
	border-top 1px solid #e1e1e1
	border-bottom 1px solid #e1e1e1
	+to-width(900px)
		border-top none
		display flex
		justify-content center
	&__list
		display flex
		justify-content space-between
		+to-width(900px)
			display block
			max-width 900px
			column-count 2
			column-gap 30px
		&-item
			+to-width(900px)
				margin-bottom 12px
			+to-width(500px)
				margin-bottom 20px
		&-link
			color #000000
			font-size 17px
			font-weight 700
			text-transform uppercase
			t()
			+to-width(1100px)
				font-size 14px
			+to-width(500px)
				font-size 15px
				text-decoration underline
				text-transform none
			&:hover
				color $secondary
			&--active
				color $secondary