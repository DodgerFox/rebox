.footer-info
	margin-top 38px
	.box
		display flex
		justify-content space-between
		padding-bottom 35px
		border-bottom 1px solid #e1e1e1
	&__left
		&__title
			font-size 17px
			font-weight 700
			text-transform uppercase
		&__text
			margin-top 25px
			font-size 16px
			font-weight 400
			line-height 25px
	&__right
		max-width 360px
		&__title
			font-size 17px
			font-weight 700
			text-transform uppercase
		&__text
			margin-top 23px
			font-size 16px
			font-weight 400
			line-height 20px
		&-social
			width 100%
			display flex
			justify-content space-between
			align-items center
			padding-bottom 30px
			&__icons
				display flex
			&__item
				background-color $secondary
				border-radius 50%
				height 53px
				width 53px
				display flex
				align-items center
				justify-content center
				margin-right 6px
				&:last-child
					margin-right 0