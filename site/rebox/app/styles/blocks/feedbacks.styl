.feedbacks
	padding-top 30px
	padding-bottom 50px
	+to-width(840px)
		padding-bottom 62px
	&__items
		width initial
		display flex
		justify-content space-between
		margin-left -15px
		margin-right -15px
		padding-bottom 15px
		+to-width(1150px)
			margin-right -8px
			margin-left -8px
	.headering
		padding-bottom 54px
	.post
		width 25%
		padding 0 15px
		height initial
		+to-width(1150px)
			padding 0 8px
		+to-width(1024px)
			width 33.333%
			&:last-child
				display none
		+to-width(840px)
			width 100%
			display flex
			justify-content center
		&__wrap
			width 100%
			border 1px solid #e1e1e1
			height 100%
			position relative
			t()
			&:hover
				box-shadow 0 5px 10px 1px rgba(0, 0, 0, 0.39)
			+to-width(840px)
				width 260px
		&__header
			height 60px
			border-bottom 1px solid #e1e1e1
			padding 12px 15px
			display flex
			justify-content space-between
			align-items center
		&__user
			display flex
			align-items center
			
			&-avatar
				width 32px
				height 32px
				border-radius 50%
				background-color #333
				margin-right 6px
				background-position center
				background-size cover
			&-title
				font-size 12px
				text-align left
				padding-bottom 2px
			&-text
				font-size 11px
		&__button
			width 82px
			height 22px
			border-radius 3px
			background-color #4098ed
			color white
			font-size 12px
			display flex
			justify-content center
			align-items center
			t()
			&:hover
				background-color #2d82d4
		
		&__image
			height 258px
			background-color #333
			background-position center
			background-size cover
		
		&-content
			padding 10px 15px
			padding-bottom 28px
			&__icon-wrap
				position absolute
				width 30px
				bottom 4px
				right 6px
			&__item
				margin-bottom 2px
				display flex
				flex-wrap wrap
				text-align left
				p
					font-size 12px
					line-height 16px
					font-weight 600
					span
						margin-left 4px
						font-weight 400
					a
						font-weight 400
						color #003569
	&__pagination
		display none
		+to-width(840px)
			display flex