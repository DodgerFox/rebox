.header
	position absolute
	top 0
	left 0
	z-index 20
	width 100%
	padding 14px 0
	background white
	.wrap
		display flex
		justify-content space-between
		align-items center
		height 100%
	&__navigation
		ul
			display flex
			justify-content space-between
			font-size 16px
			font-weight 400
			li
				margin-right 30px
				position relative
				cursor pointer
				&:last-child
					margin-right 0
				&:after
					content ''
					position absolute
					left 0
					bottom -7px
					height 4px
					width 0
					background-color #b99359
					t()
				&:hover
					&:after
						width 100%
				&.header__navigation__item-drop
					&:before
						content ''
						position absolute
						width 8px
						height 4px
						right -12px
						top 7px
						background-image url('../images/arrow-bottom.png')		
			a
				color black
	&__mobile
		display flex
		align-items center
		position relative
		&:before
			content ''
			position absolute
			width 8px
			height 4px
			right -20px
			top 14px
			background-image url('../images/arrow-bottom.png')
		&__wrap
			margin-left 11px
			h6
				font-size 25px
				font-weight 700
			p
				color #777777
				font-size 14px
				font-weight 400
	&__bucket
		&-drop
			display none