.header__mobile-drop
	display block
	position absolute
	top -280px
	right 140px
	border 1px solid #dbdce1
	width 254px
	background-color #f9f9f9
	padding 20px
	z-index 18
	t()
	&_droped
		transform translateY(362px)
	&__button
		width 100%
		padding 20px 40px
		background-color $main
		text-transform uppercase
		font-size 14px
		font-weight 400
		color #ffffff
	p
		color #848484
		font-size 14px
		font-weight 400
		margin-top 14px
	h6
		margin-top 34px
		color #848484
		font-size 14px
		font-weight 400
	&__items
		margin-top 5px
		display flex
		justify-content space-between
		align-items center
		a
			font-size 17px
			font-weight 700
			color black
	&__mail
		border-top 1px solid #ededed
		padding-top 18px
		margin-top 16px
		a
			display flex
			align-items center
			p
				margin-left 14px
				margin-top 0
				font-size 16px
				font-weight 400
				color #000000